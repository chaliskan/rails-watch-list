<h1>Create a new list</h1>
<%= simple_form_for @list do |f| %>
  <%= f.input :name %>
  <%= f.input :image_url, label: "Image URL (optional)" %>
  <%= f.button :submit, class: "btn btn-success" %>
<% end %>


<div class="row row-cols-1 row-cols-md-3 g-4">
  <% @lists.each do |list| %>
    <div class="col">
     <div class="card shadow-sm">
  <% if list.image_url.present? %>
    <%= image_tag list.image_url, class: "card-img-top", alt: list.name %>
  <% else %>
    <%= image_tag "https://source.unsplash.com/400x200/?cinema", class: "card-img-top", alt: list.name %>
  <% end %>
  <div class="card-body">
    <h5 class="card-title"><%= list.name %></h5>
    <%= link_to "View List", list_path(list), class: "btn btn-primary btn-sm" %>
  </div>
</div>

    </div>
  <% end %>
</div>
